    </footer>    

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="https://kit.fontawesome.com/ea97496765.js" crossorigin="anonymous"></script>
<script src="~/js/_Layout/site.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>