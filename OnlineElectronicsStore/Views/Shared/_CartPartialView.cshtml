@model List<OnlineElectronicsStore.Domain.ViewModels.Cart.CartViewModel>

<style>
    .cartMenu 
    {
        display: block;
        position: absolute;
        right: 5vw;
        width: 30vw;
        padding: 10px 10px 10px 0px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0px 0px 10px 1px rgba(0,0,0,0.2);
        z-index: 999;
        color: black;
        font-size: 16px;
    }
    
    .cartItem
    {
        display: grid;
        list-style-type: none;
    }
    
    
    .cartItem li:not(li:last-child)
    {
        display: grid;
        grid-auto-flow: column;
        grid-template-columns: 20% 40% 40%;
        grid-template-rows: auto auto;
        align-items: center;
    }
    
    .cartItem li:not(li:last-child):hover
    {
        background-color: #e6e8eb;
    }
    
    .cartItem li:last-child:hover
    {
        background-color: transparent;
    }
    
    .cartImage
    {
        width: 100%;
        grid-row: 1 / span 2;
        grid-column: 1;
    }
    
    .cartName
    {
        grid-row: 1;
        grid-column: 2 / span 3;
    }
    
    .cartAmount
    {
        grid-row: 2;
        grid-column: 2;
        display: grid;
        justify-items: start;
        margin-left: 10px;
    }
    
    .cartPrice
    {
        grid-row: 2;
        grid-column: 3;
        display: grid;
        justify-items: end;
        margin-right: 10px;
    }
    
    .order
    {
        display: grid;
        grid-auto-flow: column;
        grid-template-columns: 1% 1fr 30% 30%;
    }
    
    .orderBtn
    {
        background-color: #e00027;
        color: white;
        border: 0;
        border-radius: 5px;
    }
</style>

<nav class="cartMenu">
    <ul class="cartItem">
        <li>Кошик</li>

        <li>
            <img src="https://i.allo.ua/media/catalog/product/cache/3/image/524x494/602f0fa2c1f0d1ba5e241f914e856ff9/_/g/_global_version_sm-s918_galaxys23ultra_front_lavender_221122.jpg"
                 class="cartImage">
            <p class="cartName">Samsung Galaxy S23 Ultra 12/256 PINK (SM-S918BLIGSEK)</p>
            <p class="cartAmount">1шт</p>
            <p class="cartPrice">49999 ₴</p>
        </li>
							
        <li class="order">
            <hr>
            <p>Разом, без доставки</p>
            <p>49999 ₴</p>
            <button type="submit" class="orderBtn">Перейти до кошика</button>
        </li>
    </ul>
</nav>